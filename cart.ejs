<!DOCTYPE html>
<html lang="en">
<head>
 
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Cart</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>


    <style>
    
            body {
            font-family: Arial, sans-serif;
            background-color: #000;
            color:white;
            padding: 40px;
            display: flex;
            flex-direction: column;
            align-items: center;
           
        }
        

        .cart-container {
            max-width: 700px; 
            width: 100%;
            margin: 20px;
            padding: 35px;
            background: linear-gradient(45deg,red,maroon,maroon,brown,maroon, maroon,red);
            border-radius: 40px;
            
        }

        .cart-item {
            background-color: rgb(219, 207, 207);
            border: 1px solid #666;
            margin-bottom: 20px;
            padding: 15px;
            position: relative;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            transform: translateY(0);
            border-radius: 5px;
            color: #000000;
            
        }
        .cart-item:hover {
         transform: scale(1.05); 
        }
        .cart-item img {
            max-width: 80px;
            height: auto;
            margin-right: 20px;
        }

        .cart-item-details {
           flex: 1;
        }

        .cart-item-title {
            font-size: 18px;
            margin-bottom: 10px;
        }

        .remove-button {
            background-color: #e61344;
            color: white;
            border: none;
            padding: 8px 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            border-radius: 10px;
            padding-left: 20px;
            margin-right:10px ;
        }

        .remove-button:hover {
            background-color: #bf1430;
        }

     

        .ibox-content {
            margin-top: 20px;
            display: flex;
            justify-content: space-between;
            width: 100%;
        }

        .ibox-content .btn {
            flex: 1;
            margin: 0 10px;
        }
    </style>
</head>
<body>
    <div class="cart-container">
        <h1 style="text-align: center;">Shopping Cart</h1>
      
        <% let totalPrice = 0; %>
        <% cart.forEach(product => { %>
            <div class="cart-item" data-id="<%= product.id %>">
                <img src="<%= product.image %>" alt="<%= product.name %>" class="product-image">
                <div class="cart-item-details" style="margin: 20px;">
                    <h2><%= product.name %></h2>
                  <p> <%= product.description %></p>
                    <p>Price: Rs. <%= product.price %></p>
                    <button class="remove-button" onclick="viewProduct('<%= product.id %>')">
                        <i class="fa-solid fa-arrow-up-right-from-square" style="color: #ffffff;"></i> View Product
                    </button>
                    <button class="remove-button" onclick="removeFromCart('<%= product.id %>')">
                        <i class="fas fa-trash bin-icon"></i> Remove from Cart
                    </button>
                </div>
            </div>         

 
            <% totalPrice += parseFloat(product.price); %>
        <% }); %>

  
        <div class="ibox-content">
            <a href="/exit">
                <button class="btn arrow-button remove-button">
                    <i class="fa fa-shopping-cart"></i> Checkout
                </button>
            </a>
            <a href="/equipments">
                <button class="btn arrow-button remove-button">
                    <i class="fa fa-arrow-left"></i> Continue shopping
                </button>
            </a>
        </div>

        <div class="ibox">
            <div class="ibox-title">
                <h3>Cart Summary</h3>
            </div>
            <div class="ibox-content">
                <h3>Total</h3>
                <h2 class="font-bold">Rs. <%= totalPrice.toFixed(2) %></h2>
            </div>
        </div>
    </div>

    <script>
        function viewProduct(productId) {
   
            window.location.href = `/pdt/${productId}`;
        }

     
     
        let totalPrice = 800;
        function removeFromCart(itemId) {
        
            const cartItem = document.querySelector(`.cart-item[data-id="${itemId}"]`);

            if (cartItem) {
                
                cartItem.remove();


        const itemPrice = parseFloat(cartItem.querySelector('.cart-item-details p:nth-child(3)').textContent.replace('Price: Rs. ', ''));
        totalPrice -= itemPrice;


        document.querySelector('.font-bold').textContent = `Total: â‚¹${totalPrice.toFixed(2)}`;


                console.log(`Item with ID ${itemId} removed from the cart.`);
            } else {
                console.log(`Item with ID ${itemId} not found in the cart.`);
            }
            
        }
     </script>
   </body>
</html>
