<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f8f8;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background-color: #007BFF; /* Blue header background */
        }

        .icons {
            display: flex;
            align-items: center;
        }

        .cart-icon {
            margin-left: 20px;
        }

        .product-container {
            display: flex;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .product-image img {
            width: 400px;
            height: 400px;
            object-fit: cover;
            margin-right: 20px;
        }

        .product-description {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

        .action-button {
            background-color: #4CAF50; /* Green background */
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin-top: 10px;
            cursor: pointer;
        }

        .action-button:hover {
            background-color: #45A049; /* Darker green on hover */
        }

        /* Styling for the select dropdown */
        #sizeDropdown {
            padding: 10px;
            font-size: 14px;
        }

        /* Styling for product details */
        p {
            font-size: 14px;
            margin: 10px 0;
        }

        /* Wishlist and Cart icons */
        .wishlist-icon i,
        .cart-icon i {
            font-size: 24px;
            margin-right: 5px;
        }

        /* Text color for product details */
        .product-description p {
            color: #333;
        }
    </style>
</head>

<body>
    <div class="header">
        <h1 style="color: white;">Description Page</h1>
        <div class="icons">
            <div class="wishlist-icon">
                <i class="fa-regular fa-heart" style="color: #c60c3a;"></i> <!-- Font Awesome heart icon -->
                <span style="color: white;"> Wishlist</span>
            </div>
            <div class="cart-icon">
                <i class="fas fa-shopping-cart"></i> <!-- Font Awesome cart icon -->
                <span style="color: white;"> Cart</span>
            </div>
        </div>
    </div>

    <div class="product-container">
        <div class="product-image">
            <img src="https://m.media-amazon.com/images/I/61d6UfDdpsL._SL1200_.jpg" alt="proyien powder">
        </div>

        <div class="product-description">
            <h1>Bigmuscles Protein Powder</h1>
            <h2>Price : Rs 375</h2>

            <hr>

            <h2>Select Amount of protein</h2>
            <select id="sizeDropdown">
                <option value="75g">75g</option>
                <option value="100g">100g</option>
                <option value="250g">250g</option>
                <option value="500g">500g</option>
                <option value="1kg">1kg</option>
            </select>

            <button id="addToCartBtn" class="action-button" onclick="addToCart('<%= product %>')">Add to Cart</button>

            <!-- Add to Wishlist Button -->
            <button id="addToWishlistBtn" class="action-button" onclick="addToWishlist('<%= pageTitle %>')">Add to Wishlist</button>

            <p class="product-details">Product details</p>
            <p>Premium Gold Whey protein is made using the world's finest quality<br> 
                of Whey Protein Isolate & Whey protein concentrate.<br>
                Serves 25gm of High-quality protein per serving of 35gms.<br>
                Whey Protein Isolate is the main ingredient to ensure maximum<br>
                absorption for muscle repair and recovery.<br>
                100% Vegetarian, Gluten-Free, and Soy free</p>
        </div>
    </div>

  
    <script>
            const addToCartBtn = document.getElementById('addToCartBtn');

addToCartBtn.addEventListener('click', function() {
    addToCart('<%= product %>');
});
      const wishlistIcon = document.querySelector('.wishlist-icon');
        const cartIcon = document.querySelector('.cart-icon');

        // Redirect to the wishlist page when the wishlist icon is clicked
        wishlistIcon.addEventListener('click', function() {
            window.location.href = '/wish';
        });

        // Redirect to the cart page when the cart icon is clicked
        cartIcon.addEventListener('click', function() {
            window.location.href = '/cart';
        });
        function addToCart(product) {
            fetch('/addToCart')
                .then(response => response.json())
                .then(data => {
                    alert(`"${product}" is added to the cart!`);
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        }

        
        </script>
</body>

</html>
