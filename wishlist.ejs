<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Wishlist</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
 <style>
    body {
    font-family: Arial, sans-serif;
    background-color: #000; 
    color: #fff; 
    padding: 20px;
    background-image: url('https://files.123freevectors.com/wp-content/original/131043-bright-red-polygon-background-graphic-design.jpg'); 
   /*https://i.pinimg.com/originals/65/5a/01/655a01eb0e1e00145c0c7171e9d63d32.jpg*/
  background-size: cover; 
  background-position: center;
  background-repeat: no-repeat;
}

.wishlist-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 35px;
    background-color: black;
    border-radius: 40px;
    
}
.wishlist-item {
    background-color: #222;
    border: 1px solid #444;
    margin-bottom: 20px;
    padding: 15px;
    position: relative;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    transform: translateY(0);
    cursor: pointer; 
}

.wishlist-item:hover {
    transform: scale(1.05); 
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.5); 
}

.wishlist-header {
    text-align: center;
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
}

.wishlist-item {
    background-color: #222; 
    border: 1px solid #444; 
    margin-bottom: 20px;
    padding: 15px;
    position: relative;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3); 
    transform: translateY(0);
}

.wishlist-item img {
    max-width: 100px;
    height: auto;
    margin-right: 20px;
}

.wishlist-item-details {
    flex: 1;
}

.wishlist-item-title {
    font-size: 18px;
    margin-bottom: 10px;
}

.heart-icon {
    position: absolute;
    top: 10px;
    right: 10px;
    color: #ff3f6c; 
    font-size: 24px;
    cursor: pointer;
}

.remove-button {
    background-color: #e61344; 
    color: white;
    border: none;
    padding: 8px 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    border-radius: 10px;
    padding-left: 20px;
    margin-right:10px ;
}

.remove-button:hover {
    background-color: #bf1430;
}

.bin-icon {
    margin-right: 8px;
}

@keyframes expandWishlist {
    0% {
        width: 100%;
    }
    50% {
        width: 120%;
    }
    100% {
        width: 100%;
    }
}

.expanded {
    animation: expandWishlist 1s ease;
}

 </style>
</head>

<body>
   

    <div class="wishlist-container">
        <h1 style="text-align: center;">My Wishlist</h1>
     
        <% wishlist.forEach(item => { %>
            <div class="wishlist-item" data-id="<%= item.id %>">
                <img src="<%= item.image %>" alt="<%= item.name %>">
                <div class="wishlist-item-details">
                    <h3 class="wishlist-item-title"><%= item.name %></h3>
                 
                    <p>Rs. <%= item.price %></p>
                    <button class="remove-button" onclick="viewProduct('<%= item.id %>')">
                        <i class="fa-solid fa-arrow-up-right-from-square" style="color: #ffffff;"></i> View Product</button>
                    <button class="remove-button" onclick="removeFromWishlist('<%= item.id %>')">
                        <i class="fas fa-trash bin-icon"></i> Remove from Wishlist
                    </button>
                </div>
                <span class="heart-icon">&hearts;</span>
            </div>
        <% }); %>
    </div>
    
    <script>
        function viewProduct(productId) {
          
            window.location.href = `/pdt/${productId}`;
        }
    
        function removeFromWishlist(itemId) {
           
            const wishlistItem = document.querySelector(`.wishlist-item[data-id="${itemId}"]`);
            if (wishlistItem) {
                wishlistItem.remove();
               
                console.log(`Item with ID ${itemId} removed from the wishlist.`);
            } else {
                console.log(`Item with ID ${itemId} not found in the wishlist.`);
            }
        }
    </script>
    
